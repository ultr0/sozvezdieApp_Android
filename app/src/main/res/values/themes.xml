<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Созвездос" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/geometria</item>
        <item name="android:fontFamily">@font/geometria</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/text</item>
    </style>



    <style name="ButtonBase" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextStyle</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingTop">18dp</item>
    </style>

    <style name="ButtonRedBorder" parent="ButtonBase">
        <item name="android:background">@drawable/button_gradient_red</item>
    </style>

    <style name="ButtonBlueBorder" parent="ButtonBase">
        <item name="android:background">@drawable/button_solid_blue</item>
    </style>

    <style name="EditTextBase" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_panel</item>
        <item name="android:textAppearance">@style/TextStyle</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SpinerBase" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@drawable/edittext_panel</item>
        <item name="android:textAppearance">@style/TextStyle</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="SpinerItem" parent="SpinerBase">
        <item name="android:background">@null</item>
    </style>


    <style name="EditTextFieldBoxBase" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
    </style>


</resources>